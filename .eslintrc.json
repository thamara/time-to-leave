{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "rules": {
        "block-spacing": "error",
        "eqeqeq": [
            "error", "always"
        ],
        "func-call-spacing": [
            "error", "never"
        ],
        "indent": "error",
        "keyword-spacing": "error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-extra-semi": "error",
        "no-lonely-if": "error",
        "quotes": [
            "error",
            "single"
        ],
        "semi": "error",
        "semi-spacing": [
            "error", {
                "before": false,
                "after": true
          }
      ],
        "space-before-blocks": "error",
        "space-before-function-paren": [
            "error",
            "never"
        ]
    }
}
